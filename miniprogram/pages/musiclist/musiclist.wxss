.music-container {
  height: 400rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

.music-mask {
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.music-detail {
  display: flex;
  position: absolute;
  align-items: center;
  top: 0;
  left: 0;
  padding: 20rpx;
}

.cover {
  height: 360rpx;
  width: 360rpx;
}

.listinfo {
  flex-flow: 1;
  padding: 20rpx;
  width: 50%;
}

.title{
  font-size: 34rpx;
  color: #FFF;
  text-shadow: 1px 0 0 #222;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tags {
  font-size: 28rpx;
  color: rgb(39, 5, 21);
  margin: 10rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.desc {
  font-size: 24rpx;
  color:  rgb(39, 5, 21);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  text-overflow: ellipsis;
  overflow: hidden;
}
